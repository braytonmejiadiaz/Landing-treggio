---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;

const { title, author, pubDate, image, tags } = frontmatter;
---

<Layout>
  <div class="max-w-3xl mx-auto px-4 py-8 mt-35">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">{title}</h1>
    
    <div class="flex flex-col sm:flex-row gap-4 text-gray-600 mb-6">
      <p>Publicado el: {pubDate.slice(0, 10)}</p>
      <p class="sm:before:content-['â€¢'] sm:before:mx-2">Escrito por {author}</p>
    </div>
    
    {image && (
      <img 
        src={image.url} 
        alt={image.alt} 
        class="w-full max-w-lg h-auto rounded-lg shadow-md mb-8"
      />
    )}
    
    <div class="flex flex-wrap gap-2 mb-8">
      {tags.map((tag: unknown) => (
        <a 
          href={`/tags/${tag}`}
          class="inline-block px-3 py-1 text-sm font-medium text-blue-700 bg-blue-100 rounded-full hover:bg-blue-200 transition-colors"
        >
          {tag}
        </a>
      ))}
    </div>
    
    <div class="prose max-w-none">
      <slot />
    </div>
  </div>
</Layout>