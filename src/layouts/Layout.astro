import '@fontsource-variable/rubik';
import '@fontsource/merriweather/300.css';
import '@fontsource/merriweather/400.css';
import '@fontsource/merriweather/700.css';
import '@fontsource/merriweather/900.css';
import NewHeader from "../components/NewHeader.astro";
import Footer from '../components/Footer.astro';
import "../styles/global.css";
import Whatsapp from '../components/Whatsapp.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Treggio - Software para la creación y gestión de tu catalogo de ventas de productos y servicios</title>
		<link rel="icon" type="image/svg+xml" href="/favicon-tre.jpg" />
		<script
	     type="text/partytown"
		 async src="https://www.googletagmanager.com/gtag/js?id=G-0FJQ86JY4V"></script>
		<script type="text/partytown">
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());
		gtag('config', 'G-0FJQ86JY4V');
		</script>
		<meta property="og:title" content="Treggio - Vende rápido y fácil"/>
		<meta property="og:image" content="https://treggio.co/test.JPG"/>
		<meta property="og:url" content="https://treggio.co"/>
		<meta property="og:type" content="website"/>
		<meta property="og:locale" content="es_ES"/>
		<meta property="og:description" content="Crea tu tienda y catálogo para vender fácil y rapido en internet y por WhatsApp"/>

		<meta name="description" content="Crea tu tienda y catálogo para vender fácil y rapido en internet y por WhatsApp"/>
