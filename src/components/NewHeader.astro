<style>
  @keyframes nav-shadow {
    0% {
      background-color: rgba(255, 255, 255, 0);
    }
    to {
      box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
  }

  .animate-nav-shadow {
    animation: nav-shadow 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  /* Estilos iniciales para el menú móvil */
  #navbar-sticky {
    display: none; /* Ocultar por defecto */
  }

  /* Estilos para el menú móvil cuando está activo */
  #navbar-sticky.active {
    display: block; /* Mostrar cuando la clase 'active' está presente */
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background-color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    z-index: 10;
  }

  /* Mostrar menú en pantallas más grandes (md breakpoint) */
  @media (min-width: 768px) {
    #navbar-sticky {
      display: flex; /* Mostrar el menú en pantallas medianas y grandes */
      position: static; /* Revertir a la posición estática */
      background-color: transparent; /* Eliminar el fondo */
      backdrop-filter: none; /* Eliminar el desenfoque */
      border: none; /* Eliminar el borde */
    }
  }

  /* Estilos para el logo en pantallas pequeñas */
  @media (max-width: 767px) {
    .w-full {
      display: flex;
      justify-content: center; /* Centrar horizontalmente */
    }

    #logo-container {
      width: auto; /* Ancho automático para el contenedor del logo */
      margin: 0 auto; /* Centrar horizontalmente */
    }

    #logo {
      width: 75%; /* Hacer el logo más grande */
    }
  }
</style>

<script>
  // Script para mostrar/ocultar el menú en móviles
  document.addEventListener('DOMContentLoaded', function () {
    const menuButton = document.getElementById('menu-button');
    const navbar = document.getElementById('navbar-sticky');

    if (menuButton && navbar) {
      menuButton.addEventListener('click', function () {
        navbar.classList.toggle('active');
      });
    } else {
      console.error('No se encontró el botón de menú o el menú.');
    }
  });
</script>
